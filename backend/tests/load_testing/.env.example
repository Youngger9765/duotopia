# Load Testing Environment Configuration
# Copy this file to .env and fill in your credentials

# ============================================
# Staging Environment (Safe for testing)
# ============================================
STAGING_BASE_URL=https://duotopia-staging-backend-316409492201.asia-east1.run.app

# Test account credentials (create these in staging database)
TEST_TEACHER_EMAIL=test-teacher@duotopia.co
TEST_TEACHER_PASSWORD=your-test-password

TEST_STUDENT_EMAIL=test-student@duotopia.co
TEST_STUDENT_PASSWORD=your-test-password

# Test data IDs (optional - will be auto-detected if not set)
TEST_ASSIGNMENT_ID=1
TEST_CONTENT_ITEM_ID=1

# Database connection for monitoring (optional)
STAGING_DATABASE_URL=postgresql://user:password@host:port/database

# ============================================
# Production Environment (⚠️ USE WITH CAUTION)
# ============================================
PRODUCTION_BASE_URL=https://duotopia.co

# Production test accounts (create dedicated load-test accounts)
PROD_TEST_TEACHER_EMAIL=load-test-teacher@duotopia.co
PROD_TEST_TEACHER_PASSWORD=load-test-password

PROD_TEST_STUDENT_EMAIL=load-test-student@duotopia.co
PROD_TEST_STUDENT_PASSWORD=load-test-password

# Production database (for monitoring only)
PRODUCTION_DATABASE_URL=postgresql://user:password@host:port/database

# ============================================
# Test Configuration
# ============================================

# Target environment (staging|production|local)
TEST_ENV=staging

# Monitoring options
ENABLE_DB_MONITORING=true
DB_QUERY_INTERVAL=5  # seconds between DB checks

# Results
SAVE_RAW_DATA=true  # Save all request/response data

# Alerting (optional)
SLACK_WEBHOOK_URL=
ALERT_ERROR_RATE_THRESHOLD=10.0  # percent
ALERT_LATENCY_P95_THRESHOLD=15   # seconds
