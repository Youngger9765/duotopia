# Duotopia Staging Environment Configuration
# ==========================================

# ===== DATABASE CONFIGURATION =====
DATABASE_TYPE=cloud
# Use Cloud SQL for staging
DATABASE_URL=postgresql://[user]:[password]@[cloud-sql-ip]/duotopia-staging

# ===== JWT CONFIGURATION =====
JWT_SECRET=[strong-random-secret-for-staging]
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# ===== ENVIRONMENT =====
ENVIRONMENT=staging

# ===== GCP PROJECT =====
GCP_PROJECT_ID=duotopia-472708
REGION=asia-east1
GCS_BUCKET_NAME=duotopia-audio-staging
GOOGLE_APPLICATION_CREDENTIALS=service-account-key.json

# ===== OPENAI API =====
OPENAI_API_KEY=[your-api-key]

# ===== AZURE SPEECH SERVICE =====
AZURE_SPEECH_KEY=[your-azure-key]
AZURE_SPEECH_REGION=eastasia

# ===== EMAIL CONFIGURATION =====
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=myduotopia@gmail.com
SMTP_PASSWORD=[app-password]
FROM_EMAIL=myduotopia@gmail.com
FROM_NAME=Duotopia Staging
FRONTEND_URL=https://staging.duotopia.com

# ===== TAPPAY CONFIGURATION (Staging) =====
TAPPAY_APP_ID=164155
TAPPAY_APP_KEY=[your-app-key]
TAPPAY_PARTNER_KEY=[your-partner-key]
TAPPAY_MERCHANT_ID=[your-merchant-id]
# Staging 還是用 sandbox 環境測試
TAPPAY_ENV=sandbox
# Staging 可以開始測試真實 API
USE_MOCK_PAYMENT=false
