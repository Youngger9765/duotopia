FROM python:3.11-slim

WORKDIR /app

# 最小化的後端，先讓 Cloud Run 能運行
RUN pip install fastapi uvicorn

# 創建一個簡單的 API
RUN echo 'from fastapi import FastAPI\napp = FastAPI()\n@app.get("/")\ndef read_root():\n    return {"status": "ok"}\n@app.get("/health")\ndef health():\n    return {"status": "healthy"}' > main.py

CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]