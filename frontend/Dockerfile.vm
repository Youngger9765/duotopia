# Multi-stage build for VM deployment
FROM node:18-alpine AS builder

# Cache buster for production deployments
ARG BUILD_TIMESTAMP
RUN echo "Build timestamp: $BUILD_TIMESTAMP"

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy source code
COPY . .

# Build-time API URL configuration
ARG VITE_API_URL=""
ENV VITE_API_URL=$VITE_API_URL

# Environment (determines if test accounts are shown)
ARG VITE_ENVIRONMENT=development
ENV VITE_ENVIRONMENT=$VITE_ENVIRONMENT

# TapPay configuration - supports both production and sandbox modes
ARG VITE_TAPPAY_SERVER_TYPE
ARG VITE_TAPPAY_PRODUCTION_APP_ID
ARG VITE_TAPPAY_PRODUCTION_APP_KEY
ARG VITE_TAPPAY_SANDBOX_APP_ID
ARG VITE_TAPPAY_SANDBOX_APP_KEY

ENV VITE_TAPPAY_SERVER_TYPE=$VITE_TAPPAY_SERVER_TYPE
ENV VITE_TAPPAY_PRODUCTION_APP_ID=$VITE_TAPPAY_PRODUCTION_APP_ID
ENV VITE_TAPPAY_PRODUCTION_APP_KEY=$VITE_TAPPAY_PRODUCTION_APP_KEY
ENV VITE_TAPPAY_SANDBOX_APP_ID=$VITE_TAPPAY_SANDBOX_APP_ID
ENV VITE_TAPPAY_SANDBOX_APP_KEY=$VITE_TAPPAY_SANDBOX_APP_KEY

# Build
RUN npm run build

# Production stage
FROM nginx:alpine

# Cache buster for production - ensure fresh files are copied
ARG BUILD_TIMESTAMP
RUN echo "Copying dist files built at: $BUILD_TIMESTAMP"

# Copy build output
COPY --from=builder /app/dist /usr/share/nginx/html

# Copy VM-specific nginx config (listens on port 3000, no API proxying)
COPY nginx.conf.vm.template /etc/nginx/conf.d/default.conf

# Remove default nginx config
RUN rm -f /etc/nginx/conf.d/default.conf.default 2>/dev/null || true

# Expose port 3000 for VM deployment (separate nginx handles port 80)
EXPOSE 3000

# Start nginx in foreground
CMD ["nginx", "-g", "daemon off;"]
