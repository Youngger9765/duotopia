  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:vm": "vite --mode local.vm",
    "build": "vite build",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:ci": "eslint . --ext ts,tsx --report-unused-disable-directives",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:api": "vitest run src/lib/__tests__/api.*.test.ts",
    "test:api:watch": "vitest src/lib/__tests__/api.*.test.ts",
    "test:api:msw": "vitest run src/lib/__tests__/api.msw.test.ts",
    "test:api:contract": "vitest run src/lib/__tests__/api.contract.test.ts",
