# 多階段建置
FROM node:18-alpine AS builder

WORKDIR /app

# 複製 package files
COPY package*.json ./

# 安裝依賴
RUN npm ci

# 複製原始碼
COPY . .

# 建置
RUN npm run build

# Production stage
FROM nginx:alpine

# 移除預設配置
RUN rm -f /etc/nginx/conf.d/default.conf

# 複製建置結果
COPY --from=builder /app/dist /usr/share/nginx/html

# 複製 staging nginx 配置（直接寫死 URL）
COPY nginx.staging.conf /etc/nginx/conf.d/default.conf

# 暴露端口
EXPOSE 80

# 直接啟動 nginx，不需要 start.sh
CMD ["nginx", "-g", "daemon off;"]