# Duotopia Environment Configuration Template
# ==========================================
# Copy this file to .env and fill in your values

# ===== DATABASE CONFIGURATION =====
DATABASE_TYPE=supabase
DATABASE_URL=postgresql://user:password@host:5432/database
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key

# ===== JWT CONFIGURATION =====
JWT_SECRET=your-jwt-secret-change-this
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=10080  # 7 days (7 * 24 * 60) - for educational platform

# ===== ENVIRONMENT =====
ENVIRONMENT=development

# ===== GCP PROJECT =====
GCP_PROJECT_ID=your-gcp-project-id
REGION=asia-east1

# ===== OPENAI API =====
OPENAI_API_KEY=sk-proj-xxxxx

# ===== AZURE SPEECH API =====
AZURE_SPEECH_KEY=your-azure-speech-key
AZURE_SPEECH_REGION=eastasia
AZURE_SPEECH_ENDPOINT=https://eastasia.api.cognitive.microsoft.com/

# ===== ENCRYPTION =====
ENCRYPTION_KEY=generate-with-python-script

# ===== FRONTEND URLS (for CORS) =====
FRONTEND_URL=http://localhost:5173
