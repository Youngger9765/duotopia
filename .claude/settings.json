{
  "permissions": {
    "allow": [
      "WebSearch",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:docs.tappaysdk.com)",
      "WebFetch(domain:tappay.github.io)"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo '{\"prompt\": \"{prompt}\"}' | python3 .claude/hooks/check-agent-rules.py",
            "timeout": 2
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo '{\"output\": \"{output}\", \"prompt\": \"{prompt}\"}' | python3 .claude/hooks/error-reflection.py",
            "timeout": 3
          }
        ]
      }
    ]
  }
}