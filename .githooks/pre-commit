#!/bin/bash
# Pre-commit hook - 在 commit 前執行基本檢查

echo "🔍 執行 pre-commit 檢查..."

# TypeScript 型別檢查
echo "📝 檢查 TypeScript 型別..."
npm run typecheck
if [ $? -ne 0 ]; then
    echo "❌ TypeScript 型別檢查失敗！"
    exit 1
fi

# 建置測試
echo "🔨 測試建置..."
npm run build
if [ $? -ne 0 ]; then
    echo "❌ 建置失敗！"
    exit 1
fi

echo "✅ Pre-commit 檢查通過！"